<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/sub_menu_jogar"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edittext_adedonha"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:inputType="textPersonName"
        android:maxLength="5"
        android:soundEffectsEnabled="true" />

    <LinearLayout
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/cancelar_adedonha"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/cancelar"
            android:textSize="19dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/limpar_adedonha"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/limpar"
            android:textSize="19dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/nivel_adedonha"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <Spinner
            android:id="@+id/spinner_nivel_adedonha"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:prompt="@string/nivel_adedonha"
            android:textSize="19dp" />

        <Button
            android:id="@+id/botao_confirmar_adedonha"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/confirmar"
            android:textSize="19dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/group3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/botao_itens_adedonha"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/botao_configurar_itens_adedonha"
            android:textSize="19dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/botao_configurar_adedonha"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:text="@string/botao_configurar_letras_adedonha"
            android:textSize="19dp"
            android:textStyle="bold" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner_tempo_adedonha"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:prompt="@string/tempo_adedonha"
        android:textSize="19dp" />

</LinearLayout>